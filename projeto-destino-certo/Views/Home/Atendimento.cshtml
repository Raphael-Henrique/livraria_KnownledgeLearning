@using Microsoft.AspNetCore.Http;
@model Atendimento
@{
    ViewData["Title"] = "Atendimento";
}

<main class="fundo-color">

    
    <div class="atendimento-content">  
    
    <div>
    <div class="icone-titulo"><img class="icones-content" src="~/img/centraldeajuda-icone.png"><h3 class="titulos">CENTRAL DE AJUDA</h3></div>
    <form class="form-style" action="Atendimento" method="POST">
    <label class="label-style" asp-for="nome">Nome:</label>    
    <input class="input-style" asp-for="nome" name="nome" placeholder="Seu nome" required>
    <label class="label-style" asp-for="email">E-mail:</label>    
    <input class="input-style" asp-for="email" name="email" placeholder="Seu e-mail" required>
    <label class="label-style" asp-for="duvida">Dúvida:</label>
    <textarea  asp-for="duvida" class="textarea-style" rows="5" cols="30" name="duvida" required placeholder="Informe qual é a sua dúvida...">
    </textarea>
    <input type="submit" value="Enviar" class="input-button">
    </form>
    <p class="mensagem-style">@ViewBag.Atendimento</p>
</div>

    <div class="bloco-texto">
        <h3 class="titulos">CONTATO</h3>
        <ul>
            <li class="paragrafos"><img src="~/img/icone-local.jpg" class="icone-lista icones-img" >São Paulo SP - Alameda dos Jurupis</li>
            <li class="paragrafos"><img src="~/img/icone-telefone.png" class="icone-lista icones-img">(11) 2535-4393 / 95081-0474</li>
            <li class="paragrafos"><img src="~/img/icone_email.png" class="icone-lista icones-img">contato@livrariak&l.com.br</li>
            <li class="paragrafos"><img src="~/img/icone_web.png" class="icone-lista icones-img">www.knownledge&learning.com.br</li>     
        </ul>
    </div>

</div>


</main>